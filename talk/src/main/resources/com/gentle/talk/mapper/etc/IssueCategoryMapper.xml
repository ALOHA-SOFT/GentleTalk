<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gentle.talk.mapper.etc.IssueCategoryMapper">

    <resultMap id="IssueCategoryMap" type="com.gentle.talk.domain.etc.IssueCategory">
        <id property="no" column="no"/>
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="displayOrder" column="display_order"/>
        <result property="enabled" column="enabled"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 코드로 조회 -->
    <select id="selectByCode" resultMap="IssueCategoryMap">
        SELECT *
        FROM issue_categories
        WHERE code = #{code}
    </select>

    <!-- 활성화된 카테고리 목록 조회 -->
    <select id="selectAllEnabled" resultMap="IssueCategoryMap">
        SELECT *
        FROM issue_categories
        WHERE enabled = 1
        ORDER BY display_order ASC, name ASC
    </select>

    <!-- 모든 카테고리 조회 -->
    <select id="selectAllOrdered" resultMap="IssueCategoryMap">
        SELECT *
        FROM issue_categories
        ORDER BY display_order ASC, name ASC
    </select>

</mapper>
